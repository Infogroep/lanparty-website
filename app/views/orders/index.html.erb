<% title t("order.other") %>

<%= render :partial => "order_list", :locals => { :orders => @orders } %>

<% if current_user.access_allowed? :order_processing? %>
	<%= link_to t(:new, :model => t("order.one")), new_order_path, class: "btn" %>
<% else %>
	<%= simple_form_for(Order.new) do |f| %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.submit class: "btn" %>
	<% end %>
<% end %>