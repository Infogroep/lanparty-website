<div class="carousel slide" data-ride="carousel" id="slider">
	<div class="carousel-inner">
		<div class="active item">
			<%= image_tag("banner_main_faded.png") %>
			<div class="container">
				<div class="carousel-caption">ILAN <%= SETTINGS[:year] %></div>
			</div>
		</div>
		<% @featured_compos.each do |compo| %>
			<div class="item">
				<%= link_to image_tag(compo.game.image_url(:front)), compo %>
				<div class="container">
					<div class="carousel-caption">
						<%= compo.description %>
						<%= l(compo.date_time, :format => :short) %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<a class="carousel-control left" href="#slider" data-slide="prev">
	  <i class="fa fa-chevron-left"></i>
	</a>
	<a class="carousel-control right" href="#slider" data-slide="next">
	  <i class="fa fa-chevron-right"></i>
	</a>
</div>
