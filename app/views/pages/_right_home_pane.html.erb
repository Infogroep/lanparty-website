<% if Sponsor.count > 0 %>
    <h2><%= t("sponsor", :count => Sponsor.count) %></h2>
    <% Sponsor.all.each do |sponsor| %>
        <p><%= link_to (sponsor.image.nil? ? sponsor.name : image_tag(sponsor.image_url(:sidebar))), sponsor.website %></p>
    <% end %>
<% end %>
<% if not logged_in? %>
	<h2><%= t(:login) %></h2>
	<%= render partial: "sessions/small_form" %>
<% end %>
<h2><%= t(:info) %></h2>
<table class="table table-striped">
	<tr>
		<td><b><%= t("registrations") %>:</b></td>
		<td> <%= SETTINGS[:registration_available] ? t(:open) : t(:closed) %> </td>
	</tr>
	<tr>
		<td><b><%= t("location") %>:</b></td>
		<td> <%= SETTINGS[:location] %>                                   </td>
	</tr>
	<tr>
		<td><b><%= t("date_txt") %>:</b></td>
		<td> <%= SETTINGS[:date] %>                                       </td>
	</tr>
	<tr>
		<td><b><%= t("open_slots") %>:</b></td>
		<td> <%= SETTINGS[:max_participants] - User.count %>              </td>
	</tr>
	<tr>
		<td><b><%= t("payed") %>:</b></td>
		<td> <%= User.payed.count %>/<%= SETTINGS[:max_participants] %>   </td>
	</tr>
</table>
