<h1><%= t("pricing_override.other") %></h1>

<table class="table">
	<tr>
		<th><%= t("simple_form.labels.pricing_override.payable_id") %></th>
		<th><%= t("simple_form.labels.pricing_override.transform") %></th>
		<th class="action-column"></th>
	</tr>

	<% @pricing_overrides.each do |pricing_override| %>
		<tr>
			<td><%= pricing_override.payable.name %></td>
			<td><%= pricing_override.transform %></td>
			<%# TODO: Why is this not using the standard_edit_controls component? %>
			<td class="action-column">
				<div class="btn-toolbar action-toolbar">
					<div class="btn-group">
						<%= link_to content_tag("i", "", class: "fa fa-edit"), send(edit_path_method,pricing_override), class: "btn btn-default" %>
						<%= link_to content_tag("i", "", class: "fa fa-trash-o"), send(path_method,pricing_override), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
					</div>
				</div>
			</td>
		</tr>
	<% end %>
</table>

<%= link_to t(:new, model: t("pricing_override.one")), send(new_path_method), class: "btn btn-default" %>
